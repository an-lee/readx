<div class="w-full max-w-prose mx-auto p-5 bg-white rounded-lg">
  <div class="text-lg/loose font-bold mb-2">
    <%= @story.title_text %>
  </div>

  <div class="mb-4">
    <%= render 'components/datetime', datetime: @story.published_at %>
  </div>

  <div class="mb-6 prose">
    <%= Kramdown::Document.new(@story.content_text, input: 'GFM').to_html.html_safe %>
  </div>

  <% if @story.related_stories.present? %>
    <div class="mb-6">
      <div class="text-base/loose font-bold mb-4">
        <%= t('.related') %>
      </div>
      <ul class="list-[square] list-inside">
        <%= render partial: "stories/link", collection: @story.related_stories, as: :story %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-between pt-4 mb-4 border-t">
    <div class="text-sm">
      <%= t('.from') %>:
      <span class="ml-1 font-bold"><%= @story.domain_name %></span>
    </div>
    <%= link_to t('.original_link'), 
      @story.url, 
      target: '_blank',
      class: 'link text-sm opacity-70' %>
  </div>
</div>
