<div class="sticky top-0 z-10 sm:static navbar min-h-12 sm:min-h-16 bg-base-100 border-b" data-controller="nav" data-nav-path="<%= request.params['type'] %>">
  <div class="w-full max-w-4xl mx-auto flex items-center relative">
    <div class="absolute left-0 sm:hidden">
      <%= link_to "", 
        target: "_blank", 
        class: "btn btn-square btn-ghost hidden",
        data: { 
          nav_target: 'mixinShare',
          controller: 'share-link', 
          share_link_target_value: 'mixin',
          share_link_app_id_value: ReadxBot.api.client_id
        } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
        </svg>
      <% end %>

      <button data-nav-target="genericShare" data-action="nav#genericShare" class="btn btn-circle btn-ghost hidden">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
        </svg>
      </button>

      <label for="main-drawer" class="btn btn-circle btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" />
        </svg>
      </label>
    </div>

    <div class="flex-none mx-auto sm:mx-6">
      <%= link_to root_path, class: 'text-xl' do %>
        <span class="">Read</span><span class="font-bold text-primary">X</span>
      <% end %>
    </div>

    <div class="flex-1 items-center hidden sm:flex">
      <%= link_to t('.topics'), 
        root_path, 
        class: "text-base hover:font-bold hover:text-primary px-4 #{request.path == '/' || request.path.include?('topics') ? 'text-primary' : ''}" %>

      <%= link_to t('.daily'), 
        daily_path,
        class: "text-base hover:font-bold hover:text-primary px-4 #{request.path.include?('daily') ? 'text-primary' : ''}" %>

      <%= link_to t('.news'), 
        stories_path(type: :fact),
        class: "text-base hover:font-bold hover:text-primary px-4 #{request.params['type'] == 'fact' ? 'text-primary' : ''}" %>

      <%= link_to t('.opinions'), 
        stories_path(type: :opinion), 
        class: "text-base hover:font-bold hover:text-primary px-4 #{request.params['type'] == 'opinion' ? 'text-primary' : ''}" %>
    </div>
  </div>
</div>
