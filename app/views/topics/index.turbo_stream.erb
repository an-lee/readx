<%= turbo_frame_tag "topics" do %>
  <%= turbo_stream.append "topics-list" do %>
    <%= render partial: "topics/topic", collection: @topics %>
  <% end %>

  <%= turbo_stream.update "topics-pagy" do %>
    <%= render 'components/pagy', pagy: @pagy, before: @topics.last&.id %>
  <% end %>
<% end %>
