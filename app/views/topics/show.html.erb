<div class="w-full max-w-prose mx-auto p-5 bg-white rounded-lg space-y-8">
  <div>
    <div class="text-lg/loose font-bold mb-2">
      <%= @topic.title_text %>
    </div>

    <div class="">
      <span class="text-sm opacity-70">
        <%= render 'components/datetime', datetime: @topic.published_at %>
      </span>
    </div>
  </div>

  <div class="prose">
    <%= Kramdown::Document.new(@topic.content_text, input: 'GFM').to_html.html_safe %>
  </div>

  <div class="">
    <div class="text-base/loose font-bold mb-4">
      <%= t('.media_reports') %>
    </div>
    <ul class="list-[square] list-inside">
      <%= render partial: "stories/link", collection: @topic.stories, as: :story %>
    </ul>
  </div>

  <% if @topic.related_topics.present? %>
    <div class="mb-6">
      <div class="text-base/loose font-bold mb-4">
        <%= t('.topic_tracing') %>
      </div>
      <ul class="list-[square] list-inside">
        <%= render partial: "topics/link", collection: @topic.related_topics, as: :topic %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-between pt-4 border-t">
    <div class="text-sm">
      <%= t('.from') %>:
      <span class="ml-1 font-bold"><%= @topic.source.domain_name %></span>
    </div>
    <%= link_to t('.original_link'), 
      @topic.url, 
      target: '_blank',
      class: 'link text-sm opacity-70' %>
  </div>
</div>
